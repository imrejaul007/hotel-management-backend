{{> admin/header}}

<div class="container-fluid py-4">
    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Bookings</h6>
                            <h3 class="mb-0">{{stats.totalBookings}}</h3>
                        </div>
                        <div class="rounded-circle bg-white bg-opacity-25 p-3">
                            <i class="fas fa-calendar-check fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-white-50">
                            <i class="fas fa-arrow-up me-1"></i>{{stats.bookingsThisMonth}} this month
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Revenue</h6>
                            <h3 class="mb-0">${{stats.totalRevenue}}</h3>
                        </div>
                        <div class="rounded-circle bg-white bg-opacity-25 p-3">
                            <i class="fas fa-dollar-sign fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-white-50">
                            <i class="fas fa-arrow-up me-1"></i>${{stats.revenueThisMonth}} this month
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Active Tasks</h6>
                            <h3 class="mb-0">{{maintenanceStats.current}}</h3>
                        </div>
                        <div class="rounded-circle bg-white bg-opacity-25 p-3">
                            <i class="fas fa-tools fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-white-50">
                            <i class="fas fa-clock me-1"></i>{{maintenanceStats.pending}} pending
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Hotels</h6>
                            <h3 class="mb-0">{{stats.totalHotels}}</h3>
                        </div>
                        <div class="rounded-circle bg-white bg-opacity-25 p-3">
                            <i class="fas fa-hotel fa-2x text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-white-50">
                            <i class="fas fa-building me-1"></i>{{stats.activeHotels}} active
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Quick Actions -->
        <div class="col-xl-4">
            <div class="card h-100">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/admin/bookings/create" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus me-2"></i>New Booking
                        </a>
                        <a href="/admin/maintenance" class="list-group-item list-group-item-action">
                            <i class="fas fa-tools me-2"></i>Manage Maintenance
                        </a>
                        <a href="/admin/guests/create" class="list-group-item list-group-item-action">
                            <i class="fas fa-user-plus me-2"></i>Add Guest
                        </a>
                        <a href="/admin/hotels/create" class="list-group-item list-group-item-action">
                            <i class="fas fa-hotel me-2"></i>Add Hotel
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Maintenance -->
        <div class="col-xl-8">
            <div class="card h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Maintenance Requests</h5>
                    <a href="/admin/maintenance" class="btn btn-primary btn-sm">
                        <i class="fas fa-external-link-alt me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Hotel</th>
                                    <th>Type</th>
                                    <th>Priority</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentMaintenance}}
                                <tr>
                                    <td>{{this.hotel.name}}</td>
                                    <td>
                                        <span class="badge bg-{{serviceTypeColor this.serviceType}}">
                                            {{formatServiceType this.serviceType}}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{priorityColor this.priority}}">
                                            {{this.priority}}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{statusColor this.status}}">
                                            {{this.status}}
                                        </span>
                                    </td>
                                    <td>{{formatDate this.createdAt}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <!-- Recent Bookings -->
        <div class="col-xl-6">
            <div class="card h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Bookings</h5>
                    <a href="/admin/bookings" class="btn btn-primary btn-sm">
                        <i class="fas fa-external-link-alt me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Guest</th>
                                    <th>Hotel</th>
                                    <th>Check In</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentBookings}}
                                <tr>
                                    <td>{{this.user.name}}</td>
                                    <td>{{this.hotel.name}}</td>
                                    <td>{{formatDate this.checkIn}}</td>
                                    <td>
                                        <span class="badge bg-{{#if (eq this.status 'confirmed')}}success{{else if (eq this.status 'pending')}}warning{{else}}danger{{/if}}">
                                            {{this.status}}
                                        </span>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Guests -->
        <div class="col-xl-6">
            <div class="card h-100">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Guests</h5>
                    <a href="/admin/guests" class="btn btn-primary btn-sm">
                        <i class="fas fa-external-link-alt me-1"></i>View All
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each recentGuests}}
                                <tr>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>
                                        <span class="badge bg-{{#if this.active}}success{{else}}danger{{/if}}">
                                            {{#if this.active}}Active{{else}}Inactive{{/if}}
                                        </span>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

