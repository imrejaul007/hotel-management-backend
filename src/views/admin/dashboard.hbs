<!-- WebSocket Integration -->
<script src="/js/websocket.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize tooltips
    $('[data-toggle="tooltip"]').tooltip();

    // WebSocket event listeners
    hotelWS.on('connection', function(data) {
        const statusBadge = document.getElementById('connectionStatus');
        if (data.status === 'connected') {
            statusBadge.className = 'badge badge-success';
            statusBadge.innerHTML = '<i class="fas fa-signal"></i> Connected';
        } else {
            statusBadge.className = 'badge badge-danger';
            statusBadge.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Disconnected';
        }
    });

    // Update revenue
    hotelWS.on('REVENUE_UPDATE', function(data) {
        document.getElementById('todayRevenue').textContent = '$' + data.amount.toLocaleString();
    });

    // Update occupancy
    hotelWS.on('OCCUPANCY_UPDATE', function(data) {
        document.getElementById('occupancyRate').textContent = data.rate + '%';
    });

    // Update check-ins
    hotelWS.on('CHECK_IN_OUT', function(data) {
        if (data.type === 'CHECK_IN') {
            const checkins = document.getElementById('todayCheckins');
            checkins.textContent = (parseInt(checkins.textContent) + 1).toString();
        }
    });

    // Update tasks
    hotelWS.on('TASK_UPDATE', function(data) {
        document.getElementById('pendingTasks').textContent = data.pendingCount;
    });
});
</script>

