<!-- Hero Section -->
<div class="hero-section bg-dark text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4">Welcome to Hotel Booking</h1>
                <p class="lead">Find the perfect stay for your next adventure</p>
                <a href="/hotels" class="btn btn-primary btn-lg">Browse Hotels</a>
            </div>
            <div class="col-md-6">
                <img src="/images/hotel-hero.jpg" alt="Hotel" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<!-- Featured Hotels -->
{{#if featuredHotels}}
<section class="featured-hotels py-5">
    <div class="container">
        <h2 class="text-center mb-4">Featured Hotels</h2>
        <div class="row">
            {{#each featuredHotels}}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="{{imageUrl}}" class="card-img-top" alt="{{name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-text">{{description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary font-weight-bold">From {{formatCurrency basePrice}}</span>
                            <a href="/hotels/{{_id}}" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Features Section -->
<section class="features py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose Us</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-hotel fa-3x mb-3 text-primary"></i>
                    <h4>Best Hotels</h4>
                    <p>Carefully selected hotels to ensure the best quality and comfort</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-dollar-sign fa-3x mb-3 text-success"></i>
                    <h4>Best Price</h4>
                    <p>Competitive prices and special deals for our loyal customers</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-headset fa-3x mb-3 text-info"></i>
                    <h4>24/7 Support</h4>
                    <p>Our customer support team is always here to help you</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3>Subscribe to Our Newsletter</h3>
                <p class="text-muted">Get the latest updates and special offers directly in your inbox</p>
                <form class="row g-3 justify-content-center">
                    <div class="col-auto">
                        <input type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
